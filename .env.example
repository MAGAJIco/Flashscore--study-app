# =======================================
# Sports Central - Environment Variables
# =======================================
# Copy this file to .env and fill in your values
# Never commit the .env file to version control

# ==================
# BACKEND (Fastify)
# ==================

# Server Configuration
NODE_ENV=development
PORT=3001

# Database
MONGODB_URI=mongodb://localhost:27017/sportscentral

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5000

# ML Service URL
ML_SERVICE_URL=http://localhost:8000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
ENCRYPTION_KEY=your-encryption-key-32-chars-min
PICOIN_ENCRYPTION_KEY=your-picoin-encryption-key-32-chars
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Optional: RSA Keys for JWT (Advanced)
# JWT_PRIVATE_KEY=paste-your-private-key-here
# JWT_PUBLIC_KEY=paste-your-public-key-here

# Optional API Keys
SPORTS_API_KEY=your-sports-api-key
ODDS_API_KEY=your-odds-api-key
OPENAI_API_KEY=your-openai-api-key
CLAUDE_API_KEY=your-claude-api-key
ANALYTICS_API_KEY=your-analytics-api-key

# ==================
# FRONTEND (Next.js)
# ==================

# Backend API URL (Public)
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:5000
NEXTAUTH_SECRET=your-nextauth-secret-generate-with-openssl

# MongoDB (for NextAuth)
# MONGODB_URI is shared with backend

# Optional Public API Keys
NEXT_PUBLIC_ODDS_API_KEY=your-odds-api-key
NEXT_PUBLIC_ANALYTICS_API_KEY=your-analytics-api-key
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key

# ==================
# ML SERVICE (FastAPI)
# ==================

PYTHON_VERSION=3.11.13
MODEL_PATH=model_data.pkl
ENVIRONMENT=development
# FRONTEND_URL is shared with backend

# ==================
# PRODUCTION VALUES (For Reference)
# ==================

# For Render Backend:
# NODE_ENV=production
# PORT=10000
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sportscentral
