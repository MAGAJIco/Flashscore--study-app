
# Use the standard npm registry
registry=https://registry.npmjs.org/

# Disable strict SSL if needed (only for testing)
# strict-ssl=false

# Increase network timeout
fetch-timeout=60000
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Enable shamefully-hoist to avoid module resolution issues
shamefully-hoist=true

# Use lockfile version that's more compatible
lockfile-version=6.0
