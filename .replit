[deployment]
build = ["sh", "-c", "npm install --legacy-peer-deps && npm run build --workspace=packages/shared && npm run build --workspace=apps/backend"]
run = ["sh", "-c", "cd apps/backend && node dist/src/index.js"]

[[deployment.responseHeaders]]
path = "/*"
name = "Cache-Control"
value = "public, max-age=3600"

[[deployment.responseHeaders]]
path = "/static/*"
name = "Cache-Control"
value = "public, max-age=31536000, immutable"

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

