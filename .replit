modules = ["python-3.11", "nodejs-20", "web"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt", "libyaml", "gir-rs", "speech-tools"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ML Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "ML Service"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend/ml && uv run python api.py"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Backend"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && npm run dev"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Start All Services"
author = 48859100
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend/ml && uv run python api.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm run dev"

[[workflows.workflow]]
name = "Production Build"
author = 48859100
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build --workspace=packages/shared"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build --workspace=@magajico/backend"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm run build"

[[workflows.workflow]]
name = "Test Production Build"
author = 48910990
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build --workspace=packages/shared"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build --workspace=@magajico/backend"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm run build"

[[workflows.workflow]]
name = "Optimized Production Build"
author = 48910515
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Building shared package...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/shared && npm run type-check"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Building backend...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ../../apps/backend && npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Building frontend...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ../frontend && npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Build complete!\""

