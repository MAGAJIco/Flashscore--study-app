modules = ["python-3.11", "nodejs-20", "web"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt", "libyaml", "gir-rs"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ML Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "ML Service"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend/ml && uv run python api.py"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Backend"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && npm run dev"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Start All Services"
author = 48859100
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend/ml && uv run python api.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm run dev"

[[workflows.workflow]]
name = "Production Build"
author = 48859100
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build --workspace=packages/shared"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build --workspace=@magajico/backend"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm run build"

[deployment]
build = ["sh", "-c", "cd apps/frontend && pnpm install && pnpm build"]
run = ["sh", "-c", "npm run start:all"]

[[deployment.responseHeaders]]
path = "/*"
name = "Cache-Control"
value = "public, max-age=3600"

[[deployment.responseHeaders]]
path = "/static/*"
name = "Cache-Control"
value = "public, max-age=31536000, immutable"

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 4113
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 33411
externalPort = 5000

[[ports]]
localPort = 35757
externalPort = 4200

[[ports]]
localPort = 38763
externalPort = 3001

[[ports]]
localPort = 42087
externalPort = 3003

[[ports]]
localPort = 45655
externalPort = 3002

[env]
REPLIT_KEEP_PACKAGE_DEV_DEPENDENCIES = "1"
