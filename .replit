[[workflows.workflow]]
name = "Safe Production Build"
author = 49034905
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üßπ Step 1/5: Clearing cache...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf apps/frontend/.next"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf apps/frontend/.next/cache"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"‚úÖ Cache cleared\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = ""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üì¶ Step 2/5: Building shared package...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build --workspace=packages/shared"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"‚úÖ Shared package built\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = ""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üîç Step 3/5: Type checking (with timeout)...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "timeout 60s cd apps/frontend && npx tsc --noEmit || echo \"‚ö†Ô∏è Type check skipped/timed out\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = ""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üî® Step 4/5: Building frontend (with 5min timeout)...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "timeout 300s bash -c \"cd apps/frontend && NODE_OPTIONS='--max-old-space-size=4096' npm run build\" || (echo \"‚ùå Build timed out after 5 minutes\" && exit 1)"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = ""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"‚úÖ Step 5/5: Build complete!\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ls -lh apps/frontend/.next"

[deployment]
build = ["sh", "-c", "npm ci && npm run build --workspace=packages/shared && npm run build --workspace=apps/backend"]
run = ["sh", "-c", "node apps/backend/dist/src/index.js"]

[[deployment.responseHeaders]]
path = "/*"
name = "Cache-Control"
value = "public, max-age=3600"

[[deployment.responseHeaders]]
path = "/static/*"
name = "Cache-Control"
value = "public, max-age=31536000, immutable"

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

