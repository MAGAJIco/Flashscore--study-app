modules = ["nodejs-20"]
run = "cd apps/frontend && npm run dev"

[nix]
channel = "stable-25_05"
packages = ["miktex", "nix-output-monitor", "psmisc"]

[deployment]
run = ["sh", "-c", "cd apps/backend && npm start & cd apps/frontend && npm start"]
build = ["sh", "-c", "cd apps/frontend && npm install && npm run build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && pnpm dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && pnpm run dev"

[[workflows.workflow]]
name = "Full Stack Monorepo"
author = 46296136
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && pnpm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && pnpm run dev"

[[workflows.workflow]]
name = "Frontend Only"
author = 46296136
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && pnpm install && pnpm run dev"

[[workflows.workflow]]
name = "Backend Only"
author = 46296136
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && pnpm run dev"

[[workflows.workflow]]
name = "Production Deployment"
author = 47857249
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x start-production.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./start-production.sh"

[[workflows.workflow]]
name = "Health Check"
author = 46296136
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node health-check.js"

[[workflows.workflow]]
name = "Start Backend"
author = 48361168
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && pnpm install && pnpm run dev"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001
exposeLocalhost = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 39465
externalPort = 3002

[agent]
expertMode = true
