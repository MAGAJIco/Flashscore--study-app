modules = ["python-3.11", "nodejs-20", "web"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt", "libyaml", "gir-rs"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && pnpm dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "ML Service"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend/ml && python api.py"

[[ports]]
localPort = 4113
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33309
externalPort = 3000

[deployment]
build = ["sh", "-c", "cd apps/frontend && pnpm build"]
run = ["sh", "-c", "cd apps/frontend && pnpm start"]

[[deployment.responseHeaders]]
path = "/*"
name = "Cache-Control"
value = "public, max-age=3600"

[[deployment.responseHeaders]]
path = "/static/*"
name = "Cache-Control"
value = "public, max-age=31536000, immutable"

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

[workflows.Frontend]
name = "Frontend"
mode = "sequential"
[[workflows.Frontend.commands]]
command = "cd apps/frontend && pnpm dev"

[workflows.Backend]
name = "Backend"
[[workflows.Backend.commands]]
command = "cd apps/backend && pnpm dev"

[workflows.'ML Service']
name = "ML Service"
[[workflows.'ML Service'.commands]]
command = "cd apps/backend/ml && python api.py"
