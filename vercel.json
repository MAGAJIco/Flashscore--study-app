{
  "installCommand": "npm ci",
  "buildCommand": "npm run build",
  "outputDirectory": "apps/frontend/.next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "apps/frontend/src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/backend/:path*",
      "destination": "https://magajico-backend.onrender.com/api/:path*"
    }
  ]
}