{
  "name": "magajico-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:ml": "cd apps/backend/ml && uv run uvicorn api:app --host 0.0.0.0 --port 8000",
    "install:all": "npm install && npm install --workspace=apps/web && npm install --workspace=apps/api"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@capacitor/cli": "^7.4.4",
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "react": "^19.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "uuid": "^13.0.0"
  }
}
