    "@next-auth/mongodb-adapter": "^1.1.3",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
