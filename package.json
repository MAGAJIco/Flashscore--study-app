{
  "name": "magajico-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:ml": "cd apps/backend/ml && uv run uvicorn api:app --host 0.0.0.0 --port 8000",
    "install:all": "npm install && npm install --workspace=apps/web && npm install --workspace=apps/api"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@capacitor/cli": "^7.4.4",
    "@playwright/test": "^1.56.1",
    "@types/uuid": "^10.0.0",
    "mongoose": "^8.19.2",
    "react": "^19.2.0",
    "uuid": "^13.0.0"
  }
}
