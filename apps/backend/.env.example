# ===========================================
# REQUIRED FOR DEPLOYMENT
# ===========================================

# Database
MONGODB_URI=mongodb://127.0.0.1:27017/sportscentral
REQUIRE_DB=true  # Set to 'true' to enforce database connection (auto-enabled in production)

# Server
PORT=10000
NODE_ENV=production

# Authentication
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d
ENCRYPTION_KEY=your_32_character_encryption_key

# CORS - Add your frontend URL (no trailing slash)
FRONTEND_URL=https://your-frontend-url.vercel.app
ALLOWED_ORIGINS=https://your-frontend-url.vercel.app,https://www.yourdomain.com

# ===========================================
# OPTIONAL - External APIs
# ===========================================

# Sports Data APIs (optional)
RAPID_API_KEY=
FOOTBALL_API_KEY=
PINNACLE_API_KEY=

# News APIs (optional)
NEWS_API_KEY=

# Notifications (optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=